<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileLayout">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:srcCompat="@drawable/carte"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:id="@+id/test1213">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/restaurant_name"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_off_black_24dp" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/restaurant_address"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/colorGreen"
        app:layout_constraintTop_toTopOf="@id/test1213"
        app:layout_constraintRight_toRightOf="@id/test1213"
        android:layout_marginTop="-50dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintLeft_toLeftOf="@id/test1213"
        app:layout_constraintRight_toRightOf="@id/test1213"
        app:menu="@menu/activity_restaurant_profile_bottom_nav"
        app:layout_constraintTop_toBottomOf="@id/test1213"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/list_workmates_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        app:layout_constraintTop_toBottomOf="@id/nav_view"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_workmates"
            android:name="skiti.cfwz.go4lunch.ui.restaurant_profile.ProfileActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".MainActivity"
            tools:listitem="@layout/fragment_workmates_object_list" />
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>